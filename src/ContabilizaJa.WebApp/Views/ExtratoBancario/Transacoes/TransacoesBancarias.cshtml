@model ContabilizaJa.Movimentacao.Application.ExtratoBancarioViewModels;

<h5 style="margin: 40px 0">@Model.Periodo</h5>

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Tipo da Transação</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Descrição</th>
                </tr>
            </thead>
            @if (Model.Transacoes.Count > 0)
            {
            <tbody>
                @foreach (var transacao in Model.Transacoes)
                {
                <tr>
                    <th scope="row">@transacao.Data</th>
                    <td>@transacao.Tipo</td>
                    <td>@transacao.Valor</td>
                    <td>@transacao.Descricao</td>
                </tr>
                }
            </tbody>
            }
            else
            {
            <tbody>
                <tr>
                    <td>Nenhum registro foi encontrado.</td>
                </tr>
            </tbody>
            }
        </table>
    </div>
</div>